@model IEnumerable<LecturerClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "Track Claim Status";
}

<h2>Track Your Claims</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You have not submitted any claims yet.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Claim ID</th>
                <th>Month</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimId</td>
                    <td>@claim.Month</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@claim.Amount</td>
                    <td>
                        @if (claim.Status == LecturerClaimSystem.Models.ClaimStatus.Submitted)
                        {
                            <span class="badge bg-secondary">Submitted</span>
                        }
                        else if (claim.Status == LecturerClaimSystem.Models.ClaimStatus.Forwarded)
                        {
                            <span class="badge bg-info text-dark">Forwarded</span>
                        }
                        else if (claim.Status == LecturerClaimSystem.Models.ClaimStatus.Approved)
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                    </td>
                    <td>@claim.CreatedAt.ToString("g")</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary"
                           asp-controller="Claim"
                           asp-action="FeedbackForClaim"
                           asp-route-claimId="@claim.ClaimId">
                            View Feedback
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
