@model IEnumerable<LecturerClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "Review Claims";
}

<h2>Review Submitted Claims</h2>

<table class="table">
    <thead>
        <tr>
            <th>ClaimId</th>
            <th>Lecturer</th>
            <th>Month</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.ClaimId</td>
                <td>@c.Lecturer?.Name</td>
                <td>@c.Month</td>
                <td>@c.HoursWorked</td>
                <td>@c.HourlyRate</td>
                <td>@c.Amount</td>
                <td>
                    <form asp-action="ForwardClaim" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@c.ClaimId" />
                        <input type="hidden" name="coordinatorMessage" value="Forwarded to manager" />
                        <button type="submit" class="btn btn-success btn-sm">Forward</button>
                        @Html.AntiForgeryToken()
                    </form>

                    <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#rejectModal" data-claimid="@c.ClaimId">Reject</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form id="rejectForm" method="post" asp-action="RejectByCoordinator">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Reject Claim</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="rejectClaimId" />
                    <div class="form-group">
                        <label>Reason for rejection</label>
                        <textarea name="coordinatorMessage" class="form-control" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Send Rejection</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
            @Html.AntiForgeryToken()
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $('#rejectModal').on('show.bs.modal', function (e) {
            var button = $(e.relatedTarget);
            var claimId = button.data('claimid');
            $('#rejectClaimId').val(claimId);
        });
    </script>
}
