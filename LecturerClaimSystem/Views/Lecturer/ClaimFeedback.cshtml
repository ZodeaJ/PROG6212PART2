@model LecturerClaimSystem.Models.Claim
@{
    ViewData["Title"] = "Claim Feedback";
}

<h2>Feedback for Claim @Model.ClaimId</h2>

<div class="card mb-3">
    <div class="card-header">
        Claim Details
    </div>
    <div class="card-body">
        <p><strong>Month:</strong> @Model.Month</p>
        <p><strong>Hours Worked:</strong> @Model.HoursWorked</p>
        <p><strong>Hourly Rate:</strong> @Model.HourlyRate</p>
        <p><strong>Amount:</strong> @Model.Amount</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Status:</strong> @Model.Status</p>
        @if (!string.IsNullOrEmpty(Model.SupportingDocument))
        {
            <p>
                <strong>Document:</strong>
                <a class="btn btn-secondary btn-sm"
                   asp-controller="Claim"
                   asp-action="ViewDocument"
                   asp-route-claimId="@Model.ClaimId">
                    View
                </a>
            </p>
        }
    </div>
</div>

<h3>Feedback Messages</h3>

@if (Model.FeedbackMessages != null && Model.FeedbackMessages.Any())
{
    <ul class="list-group">
        @foreach (var fb in Model.FeedbackMessages.OrderBy(f => f.Timestamp))
        {
            <li class="list-group-item">
                <strong>@fb.Role:</strong> @fb.Message
                <span class="text-muted float-end">@fb.Timestamp.ToLocalTime()</span>
            </li>
        }
    </ul>
}
else
{
    <p>No feedback yet.</p>
}
